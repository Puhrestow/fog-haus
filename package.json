{
  "name": "fog.haus",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel cp_assets client html styles serve",
    "build": "sh ./build.sh",
    "cp_assets": "watch 'cp -r lib/* dev' lib",
    "html": "pug -O data.json --pretty --watch src/pages --out dev",
    "html:prod": "pug -O data.json src/pages/index.pug --out dist",
    "client": "watch 'cp -v src/js/*.js dev/js' ./src/js",
    "styles": "stylus --watch src/styl/main.styl --out dev/css",
    "styles:prod": "stylus --out dist src/styl/main.styl",
    "serve": "nodemon -w app app/index.js",
    "postinstall": "bash ./build.sh"
  },
  "engines": {
    "node": ">= 6"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^3.1.0",
    "watch": "^1.0.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "pug": "^2.0.0-beta6",
    "stylus": "^0.54.5",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "http-server": "^0.9.0",
    "nodemailer": "^2.6.4",
    "superagent": "^2.3.0"
  }
}
