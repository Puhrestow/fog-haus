$fogWhite = #fff
$fogBlue = #D7F9F1
$fogGreen = #50E3C2
$fogSlate = #323B41

*
    box-sizing border-box

@import "_typo"
@import "_layout"
@import "_assets"
@import "_content"

.logo--inlineLarge
  width 95px
  height auto
  vertical-align middle

.logo--inlineSmall
  width 73px
  height auto
  vertical-align middle

// Util
.u-center-abs
  position absolute
  top 33%
  left 50%
  transform translateX(-50%) translateY(-50%)

.u-center-block
  margin-left auto
  margin-right auto
  display block

.u-text-center
  text-align center

.u-text-left
  text-align left

.u-text-right
  text-align right
