$black = #131313
$grey = #d8d8d8

// Layout
html, body
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background-color $black
  //background-image url('/img/fog.png')
  //background-repeat no-repeat
  //background-position 50% -50%
  //background-size contain

.callout
  width 100%
  color $grey
  font-family 'Open Sans', sans-serif

  a
    font-size 18px

.hello-form
  margin-top 1rem
  font-size 22px
  max-width 600px

.hello-form .form-section
  visibility hidden

.hello-form .form-section.show
  visibility visible

.hide
  visibility hidden

// Typo
h1
  font-size 66px

a
  text-decoration none

a, h1
  color inherit

// Transitions
.trans.opacity-in,
.trans.opacity-out
  transition opacity 2000ms ease

.trans.opacity-in
  opacity 0

.trans.opacity-out
  opacity 1

.trans.hide
  opacity 0

.trans.show
  opacity 1

// Form
input, select
  border 0
  background-color black
  font-size 22px
  padding 4px
  border-bottom 1px solid grey
  border-radius 0
  text-align center
  color lightgrey

.group
  text-align left
  max-width 600px
  margin-top 1rem

.group input
  display block

// Util
.u-center-abs
  position absolute
  top 33%
  left 50%
  transform translateX(-50%) translateY(-50%)

.u-center-block
  margin-left auto
  margin-right auto
  display block

.u-text-center
  text-align center

.u-text-left
  text-align left
